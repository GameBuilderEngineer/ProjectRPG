///////////////////////////////////////////////////////////////////////////////////
//型定義
///////////////////////////////////////////////////////////////////////////////////
struct VS_OUT
{
    float4 Pos	: POSITION;
	float2 UV	: TEXCOORD0;
};

///////////////////////////////////////////////////////////////////////////////////
//グローバル
///////////////////////////////////////////////////////////////////////////////////
float TexWidth=1024;
float TexHeight=1024;
texture Tex;
float	rate;

sampler Sampler = sampler_state
{
	Texture = (Tex);
	MinFilter = LINEAR;
    MagFilter = LINEAR;
    MipFilter = NONE;
    AddressU = Clamp;
    AddressV = Clamp;
};


///////////////////////////////////////////////////////////////////////////////////
//バーテックス・シェーダー
///////////////////////////////////////////////////////////////////////////////////
VS_OUT VS(float4 Position : POSITION, float2 TC : TEXCOORD0) 
{
	VS_OUT Out = (VS_OUT)0;

	Out.Pos = Position;

	Out.UV = TC;
	
	return Out;
}

///////////////////////////////////////////////////////////////////////////////////
//ピクセル・シェーダー
///////////////////////////////////////////////////////////////////////////////////
float4 PS( VS_OUT In) : COLOR
{   
	float4 Color = tex2D(Sampler,In.UV);
	float4 FinalColor = Color;
	//FinalColor *= rate;
	return FinalColor;	
}

///////////////////////////////////////////////////////////////////////////////////
// テクニック
///////////////////////////////////////////////////////////////////////////////////
technique main
{
    pass p0
    {    
		VertexShader = compile vs_2_0 VS();
        PixelShader  = compile ps_2_0 PS();
    }
}